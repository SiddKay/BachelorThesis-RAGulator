{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "console": {
      "format": "%(levelname)s @ %(module)s:%(funcName)s:%(lineno)d - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "json": {
      "()": "app.services.logger.CustomJSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "message": "message",
        "thread_name": "threadName",
        "timestamp": "timestamp",
        "logger": "name"
      }
    }
  },
  "handlers": {
    "default": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "console",
      "stream": "ext://sys.stderr"
    },
    "rotating_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "json",
      "filename": "backend/logs/ragulator.log.jsonl",
      "maxBytes": 524288,
      "backupCount": 3,
      "encoding": "utf8"
    },
    "queue_handler": {
      "class": "logging.handlers.QueueHandler",
      "handlers": ["default", "rotating_file"],
      "respect_handler_level": true
    }
  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": ["queue_handler"]
    }
  }
}
